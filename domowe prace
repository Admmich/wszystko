lista = ['Adam Nowak', 'Jan Kowalski', 'Piotr Baran']
inicjal = []
for i in lista:
    imie_nazw = i.split()
    imie, nazw = imie_nazw[0], imie_nazw[1]
    inicjal.append(imie[0] + nazw[0])

print(inicjal)

